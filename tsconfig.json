{
  "compilerOptions": {
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["dom", "es2017", "es5", "es6", "es7"],
    "outDir": ".",
    "strict": true
  },
  "include": ["src", "examples", "__tests__"],
  "exclude": ["docs/*", "webpack.config.*", "*.js"]
}
